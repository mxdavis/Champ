<div class="form-group container col-9">
  <p id="notice"><%= notice %></p>
  <h1>
    <strong>Title:</strong>
    <%= "#{@post.title} #{@post.factorial}"%>
  </h1>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= @post.published %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
